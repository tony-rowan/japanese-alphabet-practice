<div class="w-screen min-h-screen p-12 pt-24 flex items-center place-content-evenly">
  <div class="flex flex-col gap-4">
    <div class="card card--large">
      <%= @question.question %>
    </div>
    <div class="flex gap-4">
      <%= button_to(
        @question.answers.first,
        answer_path(@question.answers.first),
        class: "button button--card card card--small"
      ) %>
      <%= button_to(
        @question.answers.last,
        answer_path(@question.answers.last),
        class: "button button--card card card--small"
      ) %>
    </div>
  </div>
</div>
