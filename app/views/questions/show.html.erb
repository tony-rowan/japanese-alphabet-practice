<div class="w-screen h-screen p-12 flex items-center place-content-evenly">
  <div class="flex gap-4">
    <div class="p-24 bg-white shadow-lg rounded-lg text-8xl">
      <%= @question.question %>
    </div>
    <div class="flex flex-col gap-4">
      <%= link_to(
        @question.answers.first,
        character_path_for_answer(@question.answers.first),
        class: "p-14 bg-white shadow-lg rounded-lg text-2xl hover:bg-yellow-500 hover:text-white"
      ) %>
      <%= link_to(
        @question.answers.last,
        character_path_for_answer(@question.answers.last),
        class: "p-14 bg-white shadow-lg rounded-lg text-2xl hover:bg-yellow-500 hover:text-white"
      ) %>
    </div>
  </div>
</div>
