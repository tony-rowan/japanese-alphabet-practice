<div class="w-screen h-screen p-12 flex items-center place-content-evenly">
  <div class="flex gap-4">
    <div class="p-24 bg-white shadow-lg rounded-lg text-8xl">
      <%= @question.question %>
    </div>
    <div class="flex flex-col gap-4">
      <%= button_to(
        @question.answers.first,
        answer_path(@question.answers.first),
        class: "button--card p-14 text-2xl"
      ) %>
      <%= button_to(
        @question.answers.last,
        answer_path(@question.answers.last),
        class: "button--card p-14 text-2xl"
      ) %>
    </div>
  </div>
</div>
